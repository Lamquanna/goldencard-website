{
  "colors": {
    "primary": "#00A67E",
    "secondary": "#FFC400",
    "accent": "#3B82F6",
    "background": {
      "dark": "#0a0a0a",
      "darker": "#050505",
      "medium": "#141414",
      "light": "#1a1a1a"
    },
    "text": {
      "primary": "rgba(255, 255, 255, 0.9)",
      "secondary": "rgba(255, 255, 255, 0.7)",
      "muted": "rgba(255, 255, 255, 0.5)",
      "inverse": "#0F172A"
    },
    "emerald": {
      "50": "#ECFDF5",
      "100": "#D1FAE5",
      "200": "#A7F3D0",
      "500": "#00A67E",
      "600": "#059669",
      "700": "#047857",
      "900": "#064E3B"
    },
    "amber": {
      "50": "#FFFBEB",
      "100": "#FEF3C7",
      "200": "#FDE68A",
      "500": "#FFC400",
      "600": "#D97706",
      "700": "#B45309",
      "900": "#78350F"
    }
  },
  "fonts": {
    "base": "DM Sans",
    "title": "Playfair Display",
    "ui": "Montserrat"
  },
  "spacing": {
    "section": {
      "xs": "4rem",
      "sm": "6rem",
      "md": "8rem",
      "lg": "10rem",
      "xl": "12rem"
    },
    "container": {
      "xs": "1rem",
      "sm": "2rem",
      "md": "4rem",
      "lg": "6rem",
      "xl": "8rem"
    }
  },
  "animation": {
    "easing": {
      "smooth": "power4.out",
      "elastic": "elastic.out(1, 0.5)",
      "precise": "power2.inOut",
      "bounce": "back.out(1.7)"
    },
    "duration": {
      "fast": 0.3,
      "normal": 0.6,
      "slow": 1.0,
      "cinematic": 1.4
    },
    "stagger": {
      "tight": 0.05,
      "normal": 0.1,
      "relaxed": 0.15
    }
  },
  "typography": {
    "hero": {
      "size": "clamp(3rem, 8vw, 8rem)",
      "lineHeight": "1.1",
      "letterSpacing": "0.05em",
      "fontWeight": "700"
    },
    "h1": {
      "size": "clamp(2.5rem, 6vw, 5rem)",
      "lineHeight": "1.2",
      "letterSpacing": "0.05em",
      "fontWeight": "600"
    },
    "h2": {
      "size": "clamp(2rem, 4vw, 3.5rem)",
      "lineHeight": "1.3",
      "letterSpacing": "0.05em",
      "fontWeight": "600"
    },
    "body": {
      "size": "clamp(1rem, 2vw, 1.125rem)",
      "lineHeight": "1.7",
      "letterSpacing": "0.025em",
      "fontWeight": "400"
    }
  },
  "effects": {
    "blur": {
      "sm": "4px",
      "md": "8px",
      "lg": "16px",
      "xl": "24px"
    },
    "shadow": {
      "soft": "0 2px 8px rgba(0, 0, 0, 0.1)",
      "medium": "0 4px 16px rgba(0, 0, 0, 0.15)",
      "hard": "0 8px 32px rgba(0, 0, 0, 0.2)"
    },
    "glow": {
      "emerald": {
        "sm": "0 0 10px rgba(0, 166, 126, 0.2)",
        "md": "0 0 20px rgba(0, 166, 126, 0.3)",
        "lg": "0 0 40px rgba(0, 166, 126, 0.4)"
      },
      "amber": {
        "sm": "0 0 10px rgba(255, 196, 0, 0.15)",
        "md": "0 0 20px rgba(255, 196, 0, 0.25)",
        "lg": "0 0 40px rgba(255, 196, 0, 0.35)"
      },
      "white": {
        "sm": "0 0 10px rgba(255, 255, 255, 0.1)",
        "md": "0 0 20px rgba(255, 255, 255, 0.15)",
        "lg": "0 0 40px rgba(255, 255, 255, 0.2)"
      }
    }
  }
}
