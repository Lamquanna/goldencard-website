{
  "theme": "Monochrome Cinematic Luxury",
  "colors": {
    "primary": "#FFFFFF",
    "secondary": "#C4C4C4",
    "accent": "#FFFFFF",
    "background": {
      "pure": "#000000",
      "dark": "#0A0A0A",
      "darker": "#050505",
      "medium": "#111111",
      "light": "#1A1A1A"
    },
    "text": {
      "primary": "rgba(255, 255, 255, 0.95)",
      "secondary": "rgba(255, 255, 255, 0.75)",
      "muted": "rgba(255, 255, 255, 0.5)",
      "inverse": "#0A0A0A"
    },
    "white": {
      "50": "#FFFFFF",
      "100": "#F5F5F5",
      "200": "#EEEEEE",
      "300": "#C4C4C4",
      "400": "#9E9E9E",
      "500": "#757575",
      "600": "#616161",
      "700": "#424242",
      "800": "#212121",
      "900": "#0A0A0A"
    },
    "glow": {
      "soft": "rgba(255, 255, 255, 0.1)",
      "medium": "rgba(255, 255, 255, 0.2)",
      "strong": "rgba(255, 255, 255, 0.3)"
    }
  },
  "fonts": {
    "base": "DM Sans",
    "title": "Playfair Display",
    "ui": "Montserrat"
  },
  "spacing": {
    "section": {
      "xs": "4rem",
      "sm": "6rem",
      "md": "8rem",
      "lg": "10rem",
      "xl": "12rem"
    },
    "container": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    }
  },
  "typography": {
    "hero": {
      "fontSize": "clamp(3rem, 8vw, 6rem)",
      "lineHeight": "1.1",
      "letterSpacing": "0.02em",
      "fontWeight": "300"
    },
    "h1": {
      "fontSize": "clamp(2.5rem, 6vw, 4.5rem)",
      "lineHeight": "1.2",
      "letterSpacing": "0.05em",
      "fontWeight": "300"
    },
    "h2": {
      "fontSize": "clamp(2rem, 4vw, 3.5rem)",
      "lineHeight": "1.3",
      "letterSpacing": "0.05em",
      "fontWeight": "300"
    },
    "h3": {
      "fontSize": "clamp(1.5rem, 3vw, 2.5rem)",
      "lineHeight": "1.4",
      "letterSpacing": "0.04em",
      "fontWeight": "400"
    },
    "body": {
      "fontSize": "1rem",
      "lineHeight": "1.8",
      "letterSpacing": "0.025em",
      "fontWeight": "300"
    },
    "small": {
      "fontSize": "0.875rem",
      "lineHeight": "1.6",
      "letterSpacing": "0.05em",
      "fontWeight": "300"
    }
  },
  "effects": {
    "blur": {
      "light": "blur(6px)",
      "medium": "blur(10px)",
      "heavy": "blur(20px)"
    },
    "glow": {
      "white": {
        "subtle": "0 0 20px rgba(255, 255, 255, 0.1)",
        "medium": "0 0 40px rgba(255, 255, 255, 0.2)",
        "strong": "0 0 60px rgba(255, 255, 255, 0.3)"
      }
    },
    "shadow": {
      "sm": "0 2px 10px rgba(0, 0, 0, 0.5)",
      "md": "0 4px 20px rgba(0, 0, 0, 0.6)",
      "lg": "0 8px 40px rgba(0, 0, 0, 0.7)"
    }
  },
  "animation": {
    "easing": {
      "entrance": "cubic-bezier(0.16, 1, 0.3, 1)",
      "exit": "cubic-bezier(0.7, 0, 0.84, 0)",
      "smooth": "cubic-bezier(0.45, 0, 0.55, 1)",
      "luxury": "cubic-bezier(0.77, 0, 0.175, 1)"
    },
    "duration": {
      "instant": "0.15s",
      "fast": "0.3s",
      "medium": "0.6s",
      "slow": "1.2s",
      "xslow": "1.8s"
    }
  }
}
